{% extends 'base.html.twig' %}

{% block body %}
    <h1>Raum</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Werte</th>
                <td>{% if room.digits %}{{ room.digits|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <br /><a href="{{ path('room_index') }}">Zurück zur Liste</a>
    <br /><br /><a class="btn btn-default" href="{{ path('room_edit', { 'id': room.id }) }}">Bearbeiten</a>

    {{ form_start(delete_form) }}
        <br /><input class="btn btn-danger" type="submit" value="Löschen">
    {{ form_end(delete_form) }}

{% endblock %}
